          %input{:type=>'text', :name=>'privateKey'}
          %br/
          %label{:for => 'url1'} 1. Document URL
          %br/
          %input{:type=>'text', :name=>'url1', :size=>60}
          %br/
          %label{:for => 'url2'} 2. Document URL
          %br/
          %input{:type=>'text', :name=>'url2', :size=>60}
          %br/
